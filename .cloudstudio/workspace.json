{
  "name": "clothing-space-capsule-api",
  "image": "node:18",
  "ports": [
    {
      "port": 4001,
      "name": "API Server",
      "protocol": "http",
      "visibility": "public"
    }
  ],
  "tasks": {
    "init": {
      "name": "安装依赖",
      "command": "cd api-server && npm install",
      "openFiles": ["api-server/src/app.js"]
    },
    "start": {
      "name": "启动API服务器",
      "command": "cd api-server && npm start",
      "openFiles": ["api-server/src/app.js"]
    }
  },
  "settings": {
    "nodeVersion": "18",
    "nodePackageManager": "npm",
    "preferredPort": 4001,
    "autoStart": true
  },
  "features": {
    "nodejs": true,
    "git": true,
    "ports": true
  }
}