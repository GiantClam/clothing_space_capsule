{
  "envId": "your-cloudbase-env-id",
  "functionRoot": "./cloudbase/functions",
  "functions": [
    {
      "name": "api-server",
      "timeout": 60,
      "envVariables": {
        "NODE_ENV": "production",
        "PORT": "80"
      },
      "runtime": "Nodejs16.13",
      "handler": "index.handler",
      "installDependency": true,
      "ignore": [
        "node_modules",
        ".git"
      ]
    }
  ],
  "framework": {
    "name": "express",
    "config": {
      "servicePath": "/api"
    }
  }
}