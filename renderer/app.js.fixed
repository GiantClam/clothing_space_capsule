    // æ›´æ–°åˆ†é¡µå™¨çŠ¶æ€
    updatePaginator(pageId) {
        // å®šä¹‰é¡µé¢åˆ°åˆ†é¡µå™¨ç´¢å¼•çš„æ˜ å°„
        const pageIndexMap = {
            'welcome-page': 0,
            'profile-page': 1,  // æ‹ç…§é¡µé¢ä¸æ˜¾ç¤ºåˆ†é¡µå™¨ï¼Œä½†ä¿ç•™ç´¢å¼•
            'clothing-page': 2,
