{
  "name": "clothing-space-capsule",
  "version": "1.0.0",
  "description": "衣等舱",
  "main": "main.js",
  "scripts": {
    "electron": "electron .",
    "start": "cross-env NODE_ENV=production electron .",
    "server": "node server/app.js",
    "dev": "cross-env NODE_ENV=development electron . --dev",
    "cleanup": "node cleanup-and-exit.js",
    "force-exit": "node cleanup-and-exit.js",
    "build": "electron-packager . ClothingSpaceCapsule --platform=win32 --arch=x64 --out=dist --overwrite --ignore=node_modules --no-prune --win32metadata.CompanyName=\"ClothingSpaceCapsule\" --win32metadata.FileDescription=\"衣等舱应用程序\" --win32metadata.ProductName=\"ClothingSpaceCapsule\"",
    "pack": "cross-env NODE_ENV=production electron-builder --dir",
    "dist": "cross-env NODE_ENV=production electron-builder",
    "dist:mirror": "cross-env NODE_ENV=production ELECTRON_MIRROR=https://npmmirror.com/mirrors/electron/ ELECTRON_BUILDER_BINARIES_MIRROR=https://npmmirror.com/mirrors/electron-builder-binaries/ electron-builder",
    "dist:proxy": "cross-env NODE_ENV=production HTTP_PROXY=http://127.0.0.1:7890 HTTPS_PROXY=http://127.0.0.1:7890 electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "virtual-fitting",
    "runninghub",
    "comfyui"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^32.3.3",
    "electron-packager": "^17.1.2",
    "electron-builder": "^24.13.3",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "prisma": "^6.16.2",
    "qrcode": "^1.5.4",
    "uuid": "^13.0.0"
  },
  "build": {
    "appId": "com.0086studios.clothing-space-capsule",
    "productName": "ClothingSpaceCapsule",
    "files": [
      "main.js",
      "renderer/**/*",
      "server/**/*",
      "start-electron.js",
      "package.json"
    ],
    "directories": { "buildResources": "build" },
    "asar": true,
    "win": {
      "target": [ { "target": "nsis", "arch": ["x64"] } ],
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
      "icon": "build/icon.ico",
      "sign": false,
      "signingHashAlgorithms": []
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}