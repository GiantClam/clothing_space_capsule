{
  "name": "clothing-space-capsule-api",
  "version": "1.0.0",
  "description": "服装空间胶囊 API 服务器",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "validate": "node scripts/validate.js",
    "check-env": "node scripts/check-env.js",
    "build": "node -e \"console.log('build: skip (JS project)')\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:seed": "node prisma/seed.js",
    "db:check": "node scripts/check-database.js",
    "db:fix": "node scripts/fix-database.js",
    "db:reset": "prisma migrate reset --force",
    "db:start": "docker-compose -f ../docker-compose.db.yml up -d",
    "db:stop": "docker-compose -f ../docker-compose.db.yml down",
    "db:status": "docker-compose -f ../docker-compose.db.yml ps",
    "db:logs": "docker-compose -f ../docker-compose.db.yml logs",
    "db:setup": "npm run db:start && sleep 10 && npm run db:migrate && npm run db:seed",
    "db:init": "deploy\\init-database.bat",
    "clothes:update-from-cos": "node scripts/update-clothes-from-cos.js",
    "clothes:update-image-urls": "node scripts/update-image-urls.js",
    "runninghub:setup": "node scripts/setup-runninghub.js",
    "runninghub:validate": "node scripts/validate-runninghub.js",
    "env:check": "node scripts/check-env-priority.js",
    "docker:build": "docker build -t clothing-api .",
    "docker:run": "docker run -p 4001:4001 clothing-api",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs",
    "baota:deploy": "deploy\\baota-simple-deploy-win.bat",
    "baota:deploy-full": "deploy\\baota-deploy.bat",
    "lint": "eslint src/ --ext .js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "api",
    "clothing",
    "virtual-fitting",
    "runninghub",
    "wechat"
  ],
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cos-nodejs-sdk-v5": "^2.12.4",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "prisma": "^5.20.0",
    "qrcode": "^1.5.4",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/qrcode": "^1.5.5",
    "@types/xml2js": "^0.4.14",
    "nodemon": "^3.1.7",
    "typescript": "^5.6.3"
  }
}